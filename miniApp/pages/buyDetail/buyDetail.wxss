}
.buy-top image{
  width: 100%;
  height: 750rpx;
}
.buy-top text:nth-of-type(1){
  font-size: 14px;
  font-weight: 700;
  margin: 0 120rpx 20rpx 10rpx;
}
.buy-top text:nth-of-type(2){
  font-size: 12px;
  color: brown;
}
.buy-number{
  display: flex;
  justify-content: flex-start;
  margin-left: 10rpx;
  align-items: center;
  height: 48rpx;
  margin-top: 20rpx;
}
.buy-number .reduce{
  height: 48rpx;
  width: 60rpx;
  border: 2rpx solid #ccc;
  margin: 0;
  padding: 0 10rpx;
  border-right: none;
  text-align: center;
}
.buy-number .add{
  height: 48rpx;
  width: 60rpx;
  border: 2rpx solid #ccc;
  padding: 0 10rpx;
  border-left:none;
  text-align: center;
}
.buy-number input{
  text-align: center;
  height: 48rpx;
  width: 120rpx;
  border: 2rpx solid #ccc;
}


/* 底部 */
.bottom-nav{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 0 ;
  left: 0;
  border-top: 1rpx solid #ccc;
  height: 88rpx;
  width: 100%;
}
.bottom-nav text{
  width: 33%;
  height: 88rpx;
  border-right:1rpx solid #ccc ;
  text-align: center;
  line-height: 88rpx;
}
.bottom-nav text:nth-of-type(3){
  background-color: #DD1A21;
  color: #fff;
}