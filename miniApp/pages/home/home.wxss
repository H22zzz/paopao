/* miniApp/pages/home/home.wxss */
/* 上部的swiper */
.home{
  background-color: #eee;
}
.container{
  width: 100%;
  height:422rpx;
  background-color: #ccc;
}
.swiper{
  height: 100%;
  width: 100%;
}
.swiper-item{
  width: 100%;
  height: 100%;
}
.swiper-item image{
  width: 100%;
  /* height: 100%; */
  height: 422rpx;
}

/* 中部的内容 */
.center{
  margin: 10px 0px;
  /* background-color: #ccc; */
  width: 100%;
  /* height: 216rpx; */
  background-color: #fff;
}
.center-wrap{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.center-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-top: 10rpx;
  margin-bottom:10rpx ;
}
.item-wrap{
  display: flex;
  flex-direction: column;
}
.center-item .img{
  width: 110rpx;
  height: 110rpx;
}
.center-item .txt{
  margin-top: 2px;
  font-size: 12px;
  color: #333;
}


/* 底部的内容 */
.bottom{
  margin-top: 10px;
  background-color: #fff;
}
.center-wrap{
  display: flex;
  justify-content: space-around;
  align-items: center;

}
.list{
  width: 32%;
  padding-left: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.list image{
  width: 216rpx;
  height: 216rpx;
}
.list text{
  padding-top: 8rpx;
  font-size: 12px;
  color: #333;
}

